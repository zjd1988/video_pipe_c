{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ vp project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-w",
                "${workspaceFolder}/sample/*.cpp",   // demo source code for vp framework
                "-lopencv_core",
                "-lopencv_videoio",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_dnn",
                "-lopencv_video",
                "-lpthread",
                "-lvp",  // generated already by build.sh
                "-std=c++17",
                "`pkg-config --cflags --libs glib-2.0`",
                "-lgstrtspserver-1.0",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "build demo code for VideoPipe project"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ paddle_ocr",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-w",
                "${workspaceFolder}/third_party/paddle_ocr/main/main.cpp",  // demo source code for paddle_ocr
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_highgui",
                "-lopencv_videoio",
                "-lopencv_freetype",
                "-lpaddle_ocr",  // generated already by build.sh
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "build demo code for paddle_ocr sub project"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ trt_vehicle",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-w",
                "${workspaceFolder}/third_party/trt_vehicle/main/*.cpp",  // demo source code for trt_vehicle
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_highgui",
                "-lopencv_freetype",
                "-lstdc++fs",
                "-ltrt_vehicle",  // generated already by build.sh
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "build demo code for trt_vehicle sub project"
        }
    ],
    "version": "2.0.0"
}